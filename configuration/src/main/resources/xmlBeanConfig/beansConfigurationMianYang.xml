<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="mianYang" class="com.example.configuration.City">
        <property name="name" value="mianyang" />
        <property name="population" value="4810000" />
        <property name="area" value="2万平方公里" />
    </bean>

    <bean id="liSi" class="com.example.configuration.People">
        <property name="name" value="lisi" />
        <property name="age" value="24" />
    </bean>

</beans>